<UserControl x:Class="Benchmarker.MVVM.View.BenchmarkStartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Benchmarker.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center"
                       FontSize="14">
                Your average green score:
            </TextBlock>
            <Grid Height="25">
                <ProgressBar Minimum="0"
                     Value="{Binding ScoreScale}"
                     Foreground="{Binding ScoreColour}"
                     Background="Transparent"
                     Width="300"
                     Height="25"
                     BorderThickness="0">
                    <ProgressBar.Clip>
                        <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,300,25"/>
                    </ProgressBar.Clip>
                </ProgressBar>
                <TextBlock HorizontalAlignment="Center"
                       Text="{Binding Score}"
                       FontSize="14"
                       VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>
        
        <StackPanel Name="ProcessSelection"
                    Orientation="Vertical" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Visible"
                    Grid.Row="2">
            <!--<TextBlock Text="Start a new benchmark: "
                   FontSize="28"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>-->
            <TextBlock Text="{Binding ProgressStatus}" FontSize="14" Visibility="{Binding ShowProgressBind}"/>
            <ProgressBar 
                Width="300"
                Height="25"
                Minimum="0"
                Maximum="{Binding ProgressMaxValue}"
                Value="{Binding ProgressValue}"
                Visibility="{Binding ShowProgressBind}"/>
            <Button x:Name="StartBenchmark"
                    Height="50"
                    Width="300"
                    Margin="0 25 0 0"
                    Background="LightGreen"
                    Command="{Binding SelectProcessCommand}" Content="Start a new benchmark"/>
        </StackPanel>
    </Grid>
</UserControl>
