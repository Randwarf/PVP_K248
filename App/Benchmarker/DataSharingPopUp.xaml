<Window x:Class="Benchmarker.DataSharingPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Benchmarker"
        mc:Ignorable="d"
        Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Border Background="White"
            CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderThickness="0 0 0 0.5" BorderBrush="#a9a9a9" Grid.ColumnSpan="2">
                <StackPanel Background="#f2f2f2">
                    <TextBlock Text="Benchmarker"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="20,20,0,0"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Do you agree to share your benchmarking results for further analysis?"
                           FontSize="26"
                           Margin="20,100,0,0"
                           TextWrapping="Wrap"
                           TextAlignment="Center">
                </TextBlock>
                <TextBlock Text="Your data will be completely anonymous and will only be used for the purpose of finding the most environmentally friendly apps."
                           FontSize="14"
                           Margin="20,0"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Opacity="0.75">
                </TextBlock>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="30,100">

                    <Button x:Name="Decline"
                            Click="DeclineClick"
                            Height="28"
                            Width="60"
                            Margin="0,0,20,0">
                        Decline
                    </Button>
                    <Button x:Name="Accept"
                            Click="AcceptClick"
                            Background="LightGreen"
                            Height="28"
                            Width="60">
                        Accept
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
